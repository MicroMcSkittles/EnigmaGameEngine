{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch \"SpaceSim\" RELEASE",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Release-linux-x86_64/SpaceSim/SpaceSim",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/SpaceSim",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build project in release mode"
        },
        {
            "name": "(gdb) Launch \"SpaceSim\" DEBUG",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug-linux-x86_64/SpaceSim/SpaceSim",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/SpaceSim",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build project in debug mode"
        }
    ]
}